
---
// src/layouts/Layout.astro
import Footer from "../components/Footer.astro";
import Perks from "../components/Perks.astro";

const {
  title = "Itrora Parfums",
  description = "Maison Itrora Parfums : matières nobles, lignes épurées.",
  showPerks = true,    // <- tu peux désactiver les cartes sur une page si besoin
} = Astro.props;
---
<html lang="fr">
  <head>
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <!-- Montserrat partout -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body>
    <slot />               <!-- contenu propre à la page -->
    {showPerks && <Perks />}<!-- les 4 cartes magnétiques -->
    <Footer />              <!-- pied de page global -->
  </body>
</html>
