<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700;800&display=swap');

  :root{
    --ink:#2A2927;
    --muted:#64706A;
    --bd:rgba(0,0,0,.08);
  }

  .site-footer{
    background:#fff; color:var(--ink);
    padding:3rem 24px 2.5rem;
    border-top:1px solid var(--bd);
    margin-top:8px;
  }
  .site-footer, .site-footer *{
    font-family:"Montserrat",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif !important;
  }

  /* ===== Grille footer : 2 rangées
     - row 1 : logo (brand-top) centré, pleine largeur
     - row 2 : 4 colonnes de contenu (brand-bottom + 3 menus) alignées en HAUT (même ligne) */
  .footer-grid{
    max-width:1200px; margin:0 auto;
    display:grid;
    grid-template-columns: 1.2fr 1fr 1fr 1fr;
    grid-template-rows: auto 1fr;
    column-gap: 3rem;
    row-gap: 1.8rem;
    align-items: start;           /* les colonnes de la 2e rangée démarrent toutes en haut */
  }

  /* Permet de “sortir” les enfants dans la grille parente */
  .footer-brand{ display: contents; }

  /* LOGO (rang 1, centré) */
  .brand-top{
    grid-row: 1;
    grid-column: 1 / -1;
    justify-self: center;         /* centre horizontalement */
    text-align: center;
  }
  .footer-logo{ display:block; height:144px; width:auto; }
  @media (max-width:1000px){ .footer-logo{ height:112px } }
  @media (max-width:560px){  .footer-logo{ height:80px } }

  /* Colonne marque (rang 2, col 1) */
  .brand-bottom{
    grid-row: 2;
    grid-column: 1 / 2;
    align-self: start;
  }

  /* Autres colonnes (rang 2) */
  .footer-col{ grid-row:2; align-self:start; }

  .sub{ opacity:.85; margin:.75rem 0 1rem; }
  .socials{ display:flex; gap:.8rem; margin-top:1rem; }
  .social{
    width:48px; height:48px; display:grid; place-items:center; border-radius:50%;
    background:#f6f5f4; color:var(--ink);
    box-shadow:inset 0 0 0 1px var(--bd);
    transition:filter .15s ease, transform .15s ease; text-decoration:none;
  }
  .social:hover{ filter:brightness(0.97); transform:translateY(-1px); }

  .footer-title{
    letter-spacing:.18em; text-transform:uppercase; color:var(--muted);
    font-weight:800; font-size:.9rem; margin:0 0 .9rem;
  }
  .footer-list{ margin:0; padding:0; list-style:none; }
  .footer-list li{ margin:.45rem 0; }
  .footer-list a{ color:var(--ink); text-decoration:none; opacity:.9; }
  .footer-list a:hover{ text-decoration:underline; }

  .contact p{ margin:.35rem 0; }
  .contact .link{ color:var(--ink); text-decoration:none; }
  .contact .link:hover{ text-decoration:underline; }

  .footer-bottom{
    max-width:1200px; margin:2rem auto 0; padding-top:1rem;
    display:flex; align-items:center; justify-content:flex-start; gap:1rem;
    border-top:1px solid var(--bd); color:var(--muted);
  }

  /* ===== Responsive ===== */
  @media (max-width:1000px){
    .footer-grid{
      grid-template-columns: 1fr 1fr 1fr;
    }
    .brand-bottom{ grid-column: 1 / 4; }  /* la colonne marque s’étale sur la ligne sous le logo */
  }
  @media (max-width:560px){
    .footer-grid{
      grid-template-columns: 1fr;
    }
    .brand-bottom{ grid-column: 1; }
  }
</style>

</html>
