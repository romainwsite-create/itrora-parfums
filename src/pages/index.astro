---
const SITE_NAME = "Itrora Parfums";
const NAV = ["À propos", "Collections", "Contact"];

// WhatsApp : +33 6 50 95 93 63  -> 33650959363
const WHATSAPP_PHONE = "33650959363";
const WHATSAPP_MSG =
  "Bonjour, je souhaite en savoir plus sur la nouvelle collection Itrora Parfums.";
const WHATSAPP_URL = `https://wa.me/${WHATSAPP_PHONE}?text=${encodeURIComponent(WHATSAPP_MSG)}`;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{SITE_NAME} — Nouvelle collection</title>
    <meta name="description" content="Maison Itrora Parfums : matières nobles, lignes épurées, puissance maîtrisée." />

    <!-- Polices -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <style>
      :root{ --bg:#F3F1EF;--ink:#2A2927;--muted:#6F6A65;--accent:#4A352A; --gutter:2rem; --left-col:440px; }
      *{box-sizing:border-box} html,body{height:100%}
      body{margin:0;background:var(--bg);color:var(--ink);font-family:Inter,system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif}

      /* Header */
      .header{display:grid;grid-template-columns:1fr auto 1fr;align-items:center;gap:1rem;padding:1.2rem var(--gutter)}
      .brand{display:inline-flex;align-items:center;text-decoration:none}
      .brand-logo{display:block;height:144px;width:auto}
      @media (max-width:1000px){ .brand-logo{height:112px} }
      @media (max-width:560px){ .brand-logo{height:80px} }
      .nav{display:flex;gap:1.4rem;justify-content:center}
      .nav a{text-decoration:none;color:var(--ink);opacity:.8;font-weight:500}
      .nav a:hover{opacity:1}
      .actions{display:flex;gap:.6rem;justify-content:flex-end}
      .icon-btn{appearance:none;border:0;background:transparent;cursor:pointer;padding:.4rem;border-radius:10px}
      .icon-btn:hover{background:rgba(0,0,0,.05)}

      /* HERO */
      .hero{display:grid;grid-template-columns:var(--left-col) 1fr;min-height:calc(100vh - 88px);gap:2rem;padding:1rem var(--gutter) 2.5rem}
      .hero-left{position:relative;display:grid}
      .title-wrap{position:relative;height:100%}
      .poster-title{position:absolute;left:20px;top:50%;transform:translateY(-50%) rotate(-90deg);transform-origin:center;display:flex;flex-direction:column;justify-content:space-evenly;align-items:center;height:60vh;margin:0;font-family:"Playfair Display",serif;font-weight:700;font-size:clamp(72px,8vw,140px);color:var(--accent)}
      .poster-title .block{display:block}
      .hero-right{display:grid;grid-template-rows:1fr auto;gap:1.6rem}
      .stage{position:relative;aspect-ratio:4/5;width:100%;border-radius:22px;overflow:hidden;background:#fff;box-shadow:inset 0 0 0 1px rgba(0,0,0,.03),0 20px 50px rgba(0,0,0,.06)}
      .scene-img{width:100%;height:100%;object-fit:cover;border-radius:22px;display:block}
      .lead{max-width:560px;color:var(--muted);font-size:1rem;line-height:1.6}

      /* Story / Slider */
      .section-story{padding:2rem var(--gutter) 3rem}
      .story-grid{display:grid;grid-template-columns:1fr 1fr;gap:3rem;align-items:center;max-width:1200px;margin:0 auto}
      .slider{position:relative;width:100%;aspect-ratio:4/3;border-radius:22px;overflow:hidden;background:#eee;box-shadow:inset 0 0 0 1px rgba(0,0,0,.04),0 16px 40px rgba(0,0,0,.08)}
      .slides{position:relative;z-index:1;height:100%}
      .slide{position:absolute;inset:0;z-index:1;opacity:0;transition:opacity .5s ease}
      .slide.is-active{opacity:1}
      .slide img{width:100%;height:100%;object-fit:cover;display:block}
      .caption{position:absolute;left:0;right:0;bottom:6%;color:#fff;text-align:center;text-shadow:0 2px 12px rgba(0,0,0,.35);padding:0 2rem;z-index:2}
      .caption-title{font-family:"Playfair Display",serif;font-weight:600;font-size:clamp(20px,2.2vw,32px);margin:.25rem 0}
      .caption-sub{margin:0;font-weight:500;opacity:.95}
      .slider .nav{position:absolute;top:50%;transform:translateY(-50%);width:46px;height:46px;border-radius:50%;border:1px solid rgba(0,0,0,.08);background:rgba(255,255,255,.92);color:#2A2927;cursor:pointer;display:grid;place-items:center;z-index:5;box-shadow:0 8px 22px rgba(0,0,0,.18);transition:transform .15s ease,background-color .15s ease,box-shadow .15s ease}
      .slider .prev{left:12px}.slider .next{right:12px}
      .slider .nav:hover{transform:translateY(-50%) scale(1.04);background:#fff}
      .slider .nav:active{transform:translateY(-50%) scale(0.98)}
      .slider .nav:focus-visible{box-shadow:0 0 0 3px rgba(42,41,39,.18),0 8px 22px rgba(0,0,0,.18)}
      .dots{position:absolute;left:50%;transform:translateX(-50%);bottom:12px;display:flex;gap:8px;z-index:5}
      .dots button{width:8px;height:8px;border-radius:50%;border:0;cursor:pointer;background:rgba(255,255,255,.6)}
      .dots button.is-active{background:#fff}
      .eyebrow{letter-spacing:.28em;font-weight:700;color:var(--muted);text-transform:uppercase;margin:0 0 .75rem}
      .story-title{font-family:"Playfair Display",serif;font-weight:700;font-size:clamp(28px,4.6vw,56px);line-height:1.05;margin:.25rem 0 1rem;color:var(--ink)}
      .story-lead{color:var(--ink);opacity:.85;line-height:1.7;margin:.6rem 0}
      .accordion{margin:1.25rem 0 1.75rem}
      .acc-item{width:100%;background:transparent;border:0;padding:1rem 0;display:flex;align-items:center;gap:.8rem;cursor:pointer;font-family:"Playfair Display",serif;font-size:clamp(18px,2.2vw,26px);border-bottom:1px solid rgba(0,0,0,.08)}
      .acc-item:first-of-type{border-top:1px solid rgba(0,0,0,.08)}
      .acc-icon{display:inline-block;transform:rotate(90deg);transition:transform .25s ease}
      .acc-item[aria-expanded="true"] .acc-icon{transform:rotate(270deg)}
      .acc-panel{display:none;padding:.8rem 0 1.2rem;color:var(--muted);line-height:1.6}
      .acc-panel img{
        display:block;height:auto;width:min(100%,520px);max-height:320px;object-fit:contain;margin:.75rem auto 0;border-radius:10px;box-shadow:0 8px 20px rgba(0,0,0,.06);background:#fff;
      }
      .acc-sep{border:0;border-top:1px solid rgba(0,0,0,.08);margin:0}
      .btn-ghost{display:inline-block;text-decoration:none;font-weight:600;border-radius:12px;padding:.9rem 1.4rem;background:var(--ink);color:#fff;box-shadow:0 12px 24px rgba(0,0,0,.12)}
      .btn-ghost:hover{filter:brightness(1.05)}

      /* Notes (optionnel si tu réutilises) */
      .section-notes{padding:2.5rem var(--gutter) 3.5rem}
      .notes-grid{max-width:1200px;margin:0 auto;display:grid;grid-template-columns:repeat(4,1fr);gap:2.5rem 2rem;align-items:start;text-align:center}
      .note-icon{color:var(--accent);margin:0 auto .75rem;display:grid;place-items:center}
      .note-title{font-family:"Playfair Display",serif;font-weight:700;font-size:clamp(18px,2vw,22px);margin:.2rem 0 .3rem;color:var(--ink)}
      .note-sub{margin:0;color:var(--muted);line-height:1.6}
      .note{padding:.5rem;transition:transform .18s ease}
      .note:hover{transform:translateY(-2px)}

      /* Perks */
      .perks, .perks *{ font-family:"Montserrat",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif; }
      .perks{ padding:40px 0 56px; margin-top:16px; border-top:1px solid rgba(0,0,0,.08); }
      .perks-grid{ display:grid; grid-template-columns:repeat(4,1fr); gap:24px; max-width:1200px; margin:0 auto; }
      @media (max-width:1000px){ .perks-grid{ grid-template-columns:1fr 1fr; } }
      @media (max-width:560px){ .perks-grid{ grid-template-columns:1fr; } }
      .perk{ display:flex; flex-direction:column; align-items:center; gap:8px; text-align:center; padding:12px 14px; }
      .perk .ico{ color:#ff6a3d; line-height:0; }
      .perk h3{ font-weight:700; font-size:clamp(18px,2vw,22px); letter-spacing:.01em; margin:4px 0 2px; line-height:1.2; }
      .perk p{ margin:0; color:#2e3b34; line-height:1.6; font-size:clamp(.92rem,1.1vw,1rem); }

      /* Vidéo + Produits */
      .section-shop{padding:2.5rem var(--gutter) 3.5rem}
      .shop-grid{max-width:1200px;margin:0 auto;display:grid;grid-template-columns:minmax(340px,1.2fr) 1fr;gap:2rem;align-items:stretch}
      .video-card{position:relative;border-radius:22px;overflow:hidden;background:#000;box-shadow:inset 0 0 0 1px rgba(0,0,0,.04),0 16px 40px rgba(0,0,0,.08);height:100%;display:grid}
      .video-card video{width:100%;height:100%;display:block;object-fit:cover}
      .vid-caption{position:absolute;left:2rem;bottom:1.6rem;color:#fff;text-shadow:0 2px 12px rgba(0,0,0,.35)}
      .vid-title{font-weight:800;font-size:clamp(28px,4.5vw,56px);margin:.25rem 0 0}

      .products{display:grid;grid-template-columns:1fr 1fr;gap:1.5rem}
      .product-card{background:#fff;border-radius:18px;overflow:hidden;box-shadow:inset 0 0 0 1px rgba(0,0,0,.04),0 10px 24px rgba(0,0,0,.06)}
      .product-media{position:relative;aspect-ratio:1/1;overflow:hidden;display:block}
      .product-media img{width:100%;height:100%;object-fit:cover;display:block}
      .badge{position:absolute;right:.75rem;top:.75rem;background:var(--accent);color:#fff;font-size:.7rem;letter-spacing:.08em;padding:.35rem .5rem;border-radius:6px}
      .card-body{padding:.9rem 1rem 1.2rem;text-align:center}
      .p-title{font-family:"Playfair Display",serif;font-weight:700;font-size:clamp(16px,1.6vw,20px);margin:.25rem 0 .35rem}
      .p-title a{color:inherit;text-decoration:none}
      .p-title a:hover{ text-decoration:underline}
      .price{display:flex;gap:.5rem;justify-content:center;align-items:baseline;margin:.1rem 0 .8rem}
      .price .old{color:var(--muted);text-decoration:line-through}
      .price .new{color:var(--ink);font-weight:700}
      .btn-small{appearance:none;border:0;background:var(--ink);color:#fff;font-weight:600;border-radius:10px;padding:.6rem 1rem;cursor:pointer}
      .btn-small:hover{filter:brightness(1.05)}
      @media (max-width:1000px){.shop-grid{grid-template-columns:1fr}.video-card{height:auto}.video-card video{height:auto;aspect-ratio:16/9;object-fit:cover}}

      /* Footer */
      .site-footer{background:#fff;color:var(--ink);padding:3rem var(--gutter) 2.5rem;border-top:1px solid rgba(0,0,0,.06)}
      .site-footer,.site-footer *{font-family:"Montserrat",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif !important}
      .footer-grid{
        max-width:1200px;margin:0 auto;display:grid;
        grid-template-columns:1.2fr 1fr 1fr 1fr;
        grid-template-rows:auto 1fr;
        column-gap:3rem;row-gap:1.8rem;align-items:start
      }
      .footer-brand{display:contents}
      .brand-top{grid-row:1;grid-column:1 / -1;justify-self:center;text-align:center}
      .footer-logo{display:block;height:144px;width:auto}
      @media (max-width:1000px){ .footer-logo{height:112px} }
      @media (max-width:560px){ .footer-logo{height:80px} }
      .brand-bottom{grid-row:2;grid-column:1 / 2;align-self:start}
      .footer-col{grid-row:2;align-self:start}
      .sub{opacity:.85;margin:.75rem 0 1rem}
      .socials{display:flex;gap:.8rem;margin-top:1rem}
      .social{
        width:48px;height:48px;display:grid;place-items:center;border-radius:50%;
        background:#f6f5f4;color:#2A2927;box-shadow:inset 0 0 0 1px rgba(0,0,0,.08);
        transition:filter .15s ease,transform .15s ease;text-decoration:none
      }
      .social:hover{filter:brightness(0.97);transform:translateY(-1px)}
      .footer-title{letter-spacing:.18em;text-transform:uppercase;color:var(--muted);font-weight:800;font-size:.9rem;margin:0 0 .9rem}
      .footer-list{margin:0;padding:0;list-style:none}
      .footer-list li{margin:.45rem 0}
      .footer-list a{color:var(--ink);text-decoration:none;opacity:.9}
      .footer-list a:hover{ text-decoration:underline}
      .contact p{margin:.35rem 0}
      .contact .link{color:var(--ink);text-decoration:none}
      .contact .link:hover{ text-decoration:underline}
      .footer-bottom{
        max-width:1200px;margin:2rem auto 0;padding-top:1rem;display:flex;
        align-items:center;justify-content:flex-start;gap:1rem;border-top:1px solid rgba(0,0,0,.08);color:var(--muted)
      }
      @media (max-width:1000px){
        .footer-grid{grid-template-columns:1fr 1fr 1fr}
        .brand-bottom{grid-column:1 / 4}
      }
      @media (max-width:560px){
        .footer-grid{grid-template-columns:1fr}
        .brand-bottom{grid-column:1}
      }

      /* === Search overlay (AJOUT) === */
      .search{position:fixed;inset:0;background:rgba(0,0,0,.35);backdrop-filter:blur(6px);display:grid;place-items:start center;padding-top:10vh;z-index:9999}
      .search[hidden]{display:none}
      .search__box{width:min(900px,92%);background:#fff;border-radius:16px;box-shadow:0 18px 50px rgba(0,0,0,.18);padding:14px 14px 10px}
      .search__form{position:relative;display:flex;align-items:center}
      .search__label{position:absolute;left:16px;top:10px;font-size:.8rem;color:#6F6A65}
      .search__input{width:100%;padding:28px 48px 12px 16px;font-size:1.05rem;border:1px solid rgba(0,0,0,.12);border-radius:12px;outline:none}
      .search__input:focus{box-shadow:0 0 0 3px rgba(42,41,39,.12)}
      .search__close{position:absolute;right:8px;top:8px;width:36px;height:36px;border:0;border-radius:10px;background:#f4f3f2;font-size:20px;cursor:pointer}
      .search__close:hover{filter:brightness(.97)}
      .search__hint{margin:8px 2px 2px;color:#6F6A65;font-size:.9rem}
      .search__hint kbd{background:#f4f3f2;border:1px solid rgba(0,0,0,.12);border-radius:6px;padding:2px 6px;font-family:inherit}
    </style>
  </head>

  <body>
    <!-- Header -->
    <header class="header">
      <a class="brand" href="/" aria-label="{SITE_NAME}">
        <img
          class="brand-logo"
          src="/logo-parfum.png"
          srcset="/logo-parfum.png 1x, /logo-parfum.png 2x"
          alt="{SITE_NAME}"
          width="160" height="40"
          loading="eager" fetchpriority="high"
        />
      </a>

      <nav class="nav" aria-label="Navigation principale">
        <a href="/a-propos">À propos</a>
        <a href="/collections">Collections</a>
        <a href="/contact">Contact</a>
      </nav>

      <div class="actions">
        <button class="icon-btn" aria-label="Recherche">
          <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor" stroke-width="1.8">
            <circle cx="11" cy="11" r="7"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
        </button>
      </div>
    </header>

    <!-- Panneau de recherche (AJOUT) -->
    <div class="search" data-search hidden>
      <div class="search__box" role="dialog" aria-modal="true" aria-labelledby="searchLabel">
        <form class="search__form" autocomplete="off">
          <label id="searchLabel" class="search__label">Rechercher un parfum</label>
          <input class="search__input" type="search" placeholder="Tapez un nom (ex: coco, dragon…)" />
          <button class="search__close" type="button" aria-label="Fermer" data-close>×</button>
        </form>
        <div class="search__hint">
          Astuce : appuyez sur <kbd>/</kbd> pour ouvrir — <span data-count>0</span> résultats
        </div>
      </div>
    </div>

    <!-- HERO -->
    <main class="hero">
      <section class="hero-left">
        <div class="title-wrap">
          <h1 class="poster-title" aria-hidden="true">
            <span class="block">NEW</span>
            <span class="block">COLLEC</span>
            <span class="block">TION</span>
          </h1>
        </div>
      </section>
      <section class="hero-right">
        <div class="stage">
          <img src="/2025.svg" alt="Coco des Îles" class="scene-img" />
        </div>
        <p class="lead">
          Coco des Îles vous dépose d’emblée sur des rivages lointains, baignés de douceur et d’un voile de mystère.
          L’amande et l’anis ouvrent la danse avant qu’une coco généreuse et gourmande ne s’épanouisse, souvenir de soirées tièdes à la belle étoile.
        </p>
      </section>
    </main>

    <!-- SECTION 2 -->
    <section class="section-story">
      <div class="story-grid">
        <div class="story-media">
          <div class="slider" data-slider>
            <div class="slides" data-slides>
              <figure class="slide is-active">
                <img src="/dragon-rose1.jpg" alt="Dragon rose 1" />
                <figcaption class="caption">
                  <h3 class="caption-title">La fougue d’une rose magnétique</h3>
                  <p class="caption-sub">Intensité fruitée, douceur caramélisée, sillage musc-rose : un renouveau tout en finesse.</p>
                </figcaption>
              </figure>
              <figure class="slide">
                <img src="/dragon-rose2.png" alt="Dragon rose 2" />
                <figcaption class="caption">
                  <h3 class="caption-title">L’élégance florale indomptée</h3>
                  <p class="caption-sub">Framboise-coco et cœur caramel, portés par un musc-rose d’un raffinement saisissant.</p>
                </figcaption>
              </figure>
            </div>
            <button class="nav prev" aria-label="Précédent" data-prev>
              <svg width="20" height="20" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <button class="nav next" aria-label="Suivant" data-next>
              <svg width="20" height="20" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M9 6l6 6-6 6" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <div class="dots" role="tablist" aria-label="Changer de slide" data-dots></div>
          </div>
        </div>

        <div class="story-copy">
          <p class="eyebrow">CAPTIVER VOS SENS</p>
          <h2 class="story-title">Quand la passion rencontre le parfum</h2>
          <p class="story-lead">Nous croyons au pouvoir du parfum pour sublimer le quotidien et transformer l’ordinaire en extraordinaire. Nos créations sont l’alliance harmonieuse des plus beaux éléments de la nature, habilement combinés pour donner vie à des chefs-d’œuvre olfactifs.</p>
          <p class="story-lead">Laissez-vous séduire par l’élégance de nos fragrances soigneusement élaborées, où sophistication rime avec innovation. Nous sommes fiers de la qualité de nos ingrédients, de la précision de notre savoir-faire et de l’intemporalité de nos flacons.</p>

          <div class="accordion" data-accordion>
            <button class="acc-item" aria-expanded="false"><span class="acc-icon">›</span><span class="acc-label">Des parfums qui durent</span></button>
            <div class="acc-panel">
              <p>Nos produits sont des extraits de parfums. Une noble concentration, pure et faite pour durer plus de 8h.</p>
              <img src="/teneur.png" srcset="/teneur.png 1x, /teneur.png 2x" sizes="(min-width:1000px) 520px, 90vw" alt="Teneur en parfum — longue tenue" loading="lazy" />
            </div>
            <hr class="acc-sep" />
            <button class="acc-item" aria-expanded="false"><span class="acc-icon">›</span><span class="acc-label">Une vaporisation dernier cri</span></button>
            <div class="acc-panel">
              <p>Chaque flacon est équipé d’un brumisateur dernière génération qui offre une expérience sensorielle unique.</p>
              <img src="/vaporisation.png" srcset="/vaporisation.png 1x, /vaporisation.png 2x" sizes="(min-width:1000px) 520px, 90vw" alt="Vaporisation haute précision" loading="lazy" />
            </div>
          </div>

          <a href={WHATSAPP_URL} class="btn-ghost" target="_blank" rel="noopener noreferrer">JE VEUX COMMANDER</a>
        </div>
      </div>
    </section>

    <!-- PERKS -->
    <section class="perks" aria-label="Nos engagements">
      <div class="perks-grid">
        <article class="perk">
          <div class="ico" aria-hidden="true">
            <svg width="46" height="46" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
              <path d="M3 7h11v8H3z"/><path d="M14 10h4l3 3v2h-7V10z"/><circle cx="7" cy="17" r="2"/><circle cx="16" cy="17" r="2"/>
            </svg>
          </div>
          <h3>Livraison gratuite</h3>
          <p>Livraison point relais gratuite dès 70€ d’achat</p>
        </article>

        <article class="perk">
          <div class="ico" aria-hidden="true">
            <svg width="46" height="46" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
              <path d="M20 12v7H4v-7"/><path d="M4 10h16v2H4z"/><path d="M12 10s-2.5-1.8-2.5-3.5S11 4 12 5c1-1 2.5 0 2.5 1.5S12 10 12 10z"/>
            </svg>
          </div>
          <h3>Parfum offert</h3>
          <p>Dès 100€ d’achat, dans la limite des stocks disponibles</p>
        </article>

        <article class="perk">
          <div class="ico" aria-hidden="true">
            <svg width="46" height="46" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
              <path d="M12 12a5 5 0 1 0-5-5"/><path d="M3 21a7 7 0 0 1 14 0"/><circle cx="12" cy="7" r="3"/>
            </svg>
          </div>
          <h3>Service client 24/24 – 7j/7</h3>
          <p>Contactez-nous par téléphone ou par mail, à toute heure</p>
        </article>

        <article class="perk">
