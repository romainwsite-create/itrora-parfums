    <script>
      // Slider
      (function(){
        const slider = document.querySelector('[data-slider]');
        if(!slider) return;
        const slides = [...slider.querySelectorAll('.slide')];
        const prev = slider.querySelector('[data-prev]');
        const next = slider.querySelector('[data-next]');
        const dotsWrap = slider.querySelector('[data-dots]');
        let i = 0;

        function go(idx){
          i = (idx + slides.length) % slides.length;
          slides.forEach((s,k)=>s.classList.toggle('is-active', k===i));
          if (dotsWrap) [...dotsWrap.children].forEach((d,k)=>d.classList.toggle('is-active', k===i));
        }

        if (dotsWrap) {
          slides.forEach((_,k)=>{
            const b = document.createElement('button');
            b.setAttribute('aria-label','Aller au slide ' + (k+1));
            b.addEventListener('click',()=>go(k));
            dotsWrap.appendChild(b);
          });
        }

        go(0);
        if (prev) prev.addEventListener('click',()=>go(i-1));
        if (next) next.addEventListener('click',()=>go(i+1));
      })();

      // Accordion
      (function(){
        document.querySelectorAll('[data-accordion] .acc-item').forEach(btn=>{
          btn.addEventListener('click',()=>{
            const open = btn.getAttribute('aria-expanded')==='true';
            btn.setAttribute('aria-expanded', String(!open));
            const panel = btn.nextElementSibling;
            panel.style.display = open ? 'none' : 'block';
          });
        });
      })();

      // WhatsApp Buy
      (function(){
        const PHONE = "33650959363";
        function waOrder(item){
          const msg = `Bonjour, je veux commander ${item}.`;
          const url = `https://wa.me/${PHONE}?text=${encodeURIComponent(msg)}`;
          window.open(url, '_blank', 'noopener');
        }
        document.addEventListener('click', (e) => {
          const btn = e.target.closest('.btn-buy');
          if (!btn) return;
          waOrder(btn.dataset.item || 'un produit');
        });
      })();

      // Search overlay (loupe)
      (function(){
        const openBtn = document.querySelector('.actions .icon-btn[aria-label="Recherche"]');
        const panel   = document.querySelector('[data-search]');
        if(!openBtn || !panel) return;

        const input   = panel.querySelector('.search__input');
        const closeBtn= panel.querySelector('[data-close]');
        const countEl = panel.querySelector('[data-count]');
        const cards = Array.from(document.querySelectorAll('.products .product-card'));

        // texte indexé (titre + alt)
        cards.forEach(card=>{
          const title = card.querySelector('.p-title')?.textContent || '';
          const alt   = card.querySelector('img')?.alt || '';
          card.dataset.searchText = (title + ' ' + alt).toLowerCase();
        });

        function filter(q){
          const s = (q||'').trim().toLowerCase();
          let matches = 0;
          cards.forEach(card=>{
            const ok = !s || card.dataset.searchText.includes(s);
            card.style.display = ok ? '' : 'none';
            if(ok) matches++;
          });
          if(countEl) countEl.textContent = String(matches);
        }
        function open(){
          panel.hidden = false;
          input.value = '';
          filter('');
          input.focus();
          document.body.style.overflow = 'hidden';
        }
        function close(){
          panel.hidden = true;
          document.body.style.overflow = '';
          cards.forEach(c=>c.style.display='');
        }

        openBtn.addEventListener('click', open);
        closeBtn.addEventListener('click', close);
        panel.addEventListener('click', (e)=>{ if(e.target === panel) close(); });
        document.addEventListener('keydown', (e)=>{
          if(e.key === 'Escape' && !panel.hidden) close();
          if(e.key === '/' && panel.hidden){ e.preventDefault(); open(); }
        });
        input.addEventListener('input', (e)=> filter(e.target.value));
        panel.querySelector('.search__form').addEventListener('submit', (e)=>{
          e.preventDefault();
          const first = cards.find(c => c.style.display !== 'none');
          if(first){
            const link = first.querySelector('a[href]');
            if(link){ link.click(); }
          }
        });
      })();
    </script>
