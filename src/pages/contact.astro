---
import Layout from "../layouts/Layout.astro";

const pageTitle = "Contact — Itrora";

/* Constantes pour le footer */
const SITE_NAME = "Itrora Parfums";
const WHATSAPP_PHONE = "33650959363";
const WHATSAPP_MSG =
  "Bonjour, je souhaite en savoir plus sur la nouvelle collection Itrora Parfums.";
const WHATSAPP_URL = `https://wa.me/${WHATSAPP_PHONE}?text=${encodeURIComponent(WHATSAPP_MSG)}`;
---

<Layout title={pageTitle}>
  <!-- HERO : gros CONTACT stylé -->
  <header class="hero" aria-label="Section contact">
    <div class="hero__wrap">
      <h1 class="hero__title"><span class="reveal">CONTACT</span></h1>
      <span class="hero__shine" aria-hidden="true"></span>
    </div>
  </header>

  <!-- SECTION : 2 colonnes (texte gauche / image droite) -->
  <section class="two-col">
    <div class="two-col__wrap">
      <!-- Gauche : Titre + Texte -->
      <div>
        <h2 class="two-col__title">Par E-mail</h2>
        <p class="two-col__text">
          Envoyez-nous un e-mail ici : <strong>contact@itrora.com</strong>
        </p>
      </div>

      <!-- Droite : Image depuis /public -->
      <div class="two-col__media">
        <img src="/contact.png" alt="Nous contacter — Itrora Parfums" loading="lazy" decoding="async" />
      </div>
    </div>
  </section>

  <!-- ====== PIED DE PAGE (identique à l'index) ====== -->
  <footer class="site-footer">
    <div class="footer-grid">
      <div class="footer-brand">
        <div class="logo">
          <img
            class="footer-logo"
            src="/logo-parfum.png"
            srcset="/logo-parfum.png 1x, /logo-parfum.png 2x"
            alt={SITE_NAME}
            width="180"
            height="45"
          />
        </div>
        <p class="sub">Maison française de parfums — matières nobles, lignes épurées.</p>

        <div class="socials">
          <a class="social" href="#" aria-label="Instagram">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" aria-hidden="true">
              <rect x="2.8" y="2.8" width="18.4" height="18.4" rx="5"></rect><circle cx="12" cy="12" r="4.2"></circle><circle cx="17.5" cy="6.5" r="1.2"></circle>
            </svg>
          </a>
          <a class="social" href="#" aria-label="Facebook">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M15 3h-2.2a3.8 3.8 0 0 0-3.8 3.8V9H7v3h2v7h3v-7h2.5l.5-3H12V6.8c0-.44.36-.8.8-.8H15V3z"/>
            </svg>
          </a>
          <a class="social" href="#" aria-label="TikTok">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M14 3h-2v9.1a3 3 0 1 1-2-2.8V7.6A6 6 0 1 0 17 13V8.7c1 .8 2.2 1.3 3.5 1.5V7.8A5.5 5.5 0 0 1 14 3z"/>
            </svg>
          </a>
          <a class="social" href={WHATSAPP_URL} target="_blank" rel="noopener" aria-label="WhatsApp">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" aria-hidden="true">
              <path d="M3 20l1.2-3.6A8 8 0 1 1 4 12.5"/>
              <path d="M8.8 10.6c.3-1 .7-1 1.1-.9l1.1.6c.3.2.7.7.6 1l-.2.7c.8 1.2 1.8 2 3 2.6l.7-.2c.4-.1.9.3 1 .6l.6 1.1c.1.4.1.8-.9 1.1"/>
            </svg>
          </a>
          <a class="social" href="#" aria-label="Snapchat">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" aria-hidden="true">
              <path d="M6 14c-1 2-3 1-3 2s2 1 3 2 1 3 6 3 5-2 6-3 3-1 3-2-2 0-3-2c0-1 1-2 1-4 0-3-2-6-7-6s-7 3-7 6c0 2 1 3 1 4Z"/>
            </svg>
          </a>
        </div>

        <div class="contact" style="margin-top:1rem">
          <p>Colombes (92700)</p>
          <p><a href="mailto:contact@itrora.com" class="link">contact@itrora.com</a></p>
          <p><a class="link" href="tel:+33650959363">06 50 95 93 63</a></p>
          <p><a class="link" href="/contact">Page contact</a></p>
        </div>
      </div>

      <div>
        <h4 class="footer-title">Liens rapides</h4>
        <ul class="footer-list">
          <li><a href="/">Accueil</a></li>
          <li><a href="/collections">Les Parfums</a></li>
        </ul>
      </div>

      <div>
        <h4 class="footer-title">Informations</h4>
        <ul class="footer-list">
          <li><a href="/a-propos">Notre histoire</a></li>
          <li><a href="/faq">FAQ</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div>
        <h4 class="footer-title">Legal</h4>
        <ul class="footer-list">
          <li><a href="/conditions-generales-de-vente">C.G.V</a></li>
          <li><a href="/mentions-legales">Mentions légales</a></li>
          <li><a href="/confidentialite">Confidentialité</a></li>
          <li><a href="/politique-de-cookies">Politique de cookies</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <small>© {new Date().getFullYear()} {SITE_NAME}. Tous droits réservés.</small>
    </div>
  </footer>

  <style>
    /* Montserrat */
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap');

    :root{
      --max: 1100px;
      --gap: 32px;
      --ink: #111;
      --muted: #666;
      --bg: #fff;
      --radius: 16px;
    }
    *{ box-sizing:border-box }

    /* ====== HERO CONTACT (gros titre animé) ====== */
    .hero{ background: var(--bg); font-family:"Montserrat",system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif; }
    .hero__wrap{ max-width: var(--max); margin: 0 auto; padding: 56px 20px 6px; position: relative; }
    .hero__title{
      position: relative; display: inline-block;
      font-weight: 800; text-transform: uppercase; letter-spacing: -0.02em; line-height: .95;
      font-size: clamp(48px, 10vw, 120px); color: var(--ink);
    }
    .hero__title .reveal{ display:inline-block; opacity:0; transform: translateY(18px) scale(.98);
      animation: titleIn .7s cubic-bezier(.2,.9,.2,1) .05s forwards; }
    @keyframes titleIn { to { opacity:1; transform: translateY(0) scale(1); } }
    .hero__title::after{
      content:""; position:absolute; left:0; bottom:-12px; height:10px; width:0; border-radius:999px;
      background: linear-gradient(90deg, rgba(0,0,0,.15), rgba(0,0,0,.9));
      animation: underline 1s cubic-bezier(.2,.9,.2,1) .45s forwards;
    }
    @keyframes underline { to { width:100%; } }
    .hero__shine{
      position:absolute; inset:-6px 0 0 0; pointer-events:none;
      background: linear-gradient(120deg, transparent 0%, rgba(255,255,255,.6) 30%, transparent 60%);
      background-size:200% 100%; mix-blend-mode: overlay; opacity:0;
      animation: shine 2.2s ease-out .6s forwards;
    }
    @keyframes shine {
      0% { background-position:120% 0; opacity:0; }
      25%{ opacity:1; }
      100%{ background-position:-20% 0; opacity:0; }
    }

    /* ====== SECTION 2 colonnes ====== */
    .two-col{ background: var(--bg); color: var(--ink); font-family:"Montserrat",system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif; }
    .two-col__wrap{
      max-width: var(--max); margin: 0 auto; padding: 32px 20px 40px;
      display:grid; grid-template-columns: 1.1fr 0.9fr; gap: var(--gap); align-items:center;
    }
    @media (max-width: 900px){
      .two-col__wrap{ grid-template-columns:1fr; gap:22px; padding:22px 16px 32px; }
    }
    .two-col__title{
      font-size: clamp(28px, 4vw, 42px);
      line-height: 1.15; margin: 0 0 14px 0; letter-spacing: .2px; font-weight: 700; text-align:left;
    }
    .two-col__text{
      margin:0; font-size: clamp(15px, 2.1vw, 18px); line-height:1.6; color:var(--muted); text-align:left; max-width:60ch;
    }
    .two-col__media{
      position: relative; border-radius: var(--radius); overflow: hidden;
      aspect-ratio: 16 / 10; background:#f2f2f2; box-shadow: 0 8px 28px rgba(0,0,0,.07);
    }
    .two-col__media img{ width:100%; height:100%; object-fit:cover; display:block; }

    /* ====== FOOTER (identique à l'index) ====== */
    .site-footer{background:#fff;color:var(--ink);padding:3rem 1.5rem 2.5rem;border-top:1px solid rgba(0,0,0,.06)}
    .site-footer,.site-footer *{font-family:"Montserrat",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif !important}
    .footer-grid{max-width:1200px;margin:0 auto;display:grid;grid-template-columns:1.2fr 1fr 1fr 1fr;gap:2rem 3rem;align-items:start}
    .footer-brand .logo{line-height:0}
    .footer-brand .footer-logo{display:block;height:144px;width:auto}
    @media (max-width:1000px){ .footer-brand .footer-logo{height:112px} }
    @media (max-width:560px){ .footer-brand .footer-logo{height:80px} }
    .footer-brand .sub{opacity:.85;margin:.75rem 0 1rem}
    .socials{display:flex;gap:.8rem;margin-top:1rem}
    .social{width:48px;height:48px;display:grid;place-items:center;border-radius:50%;background:#f6f5f4;color:#2A2927;box-shadow:inset 0 0 0 1px rgba(0,0,0,.08);transition:filter .15s ease,transform .15s ease}
    .social:hover{filter:brightness(0.97);transform:translateY(-1px)}
    .footer-title{letter-spacing:.18em;text-transform:uppercase;color:var(--muted);font-weight:800;font-size:.9rem;margin:0 0 .9rem}
    .footer-list{margin:0;padding:0;list-style:none}
    .footer-list li{margin:.45rem 0}
    .footer-list a{color:var(--ink);text-decoration:none;opacity:.9}
    .footer-list a:hover{text-decoration:underline}
    .contact p{margin:.35rem 0}
    .contact .link{color:var(--ink);text-decoration:none}
    .contact .link:hover{text-decoration:underline}
    .footer-bottom{max-width:1200px;margin:2rem auto 0;padding-top:1rem;display:flex;align-items:center;justify-content:flex-start;gap:1rem;border-top:1px solid rgba(0,0,0,.08);color:var(--muted)}
    @media (max-width:1000px){.footer-grid{grid-template-columns:1fr 1fr 1fr}}
    @media (max-width:800px){.footer-grid{grid-template-columns:1fr 1fr}}
    @media (max-width:560px){.footer-grid{grid-template-columns:1fr}.footer-bottom{flex-direction:column;align-items:flex-start}}
  </style>
</Layout>
