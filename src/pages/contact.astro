---
import Layout from "../layouts/Layout.astro";

const pageTitle = "Contact — Itrora";

/* Constantes pour le footer */
const SITE_NAME = "Itrora Parfums";
const WHATSAPP_PHONE = "33650959363";
const WHATSAPP_MSG =
  "Bonjour, je souhaite en savoir plus sur la nouvelle collection Itrora Parfums.";
const WHATSAPP_URL = `https://wa.me/${WHATSAPP_PHONE}?text=${encodeURIComponent(WHATSAPP_MSG)}`;
---

<Layout title={pageTitle}>
  <!-- HERO : gros CONTACT stylé -->
  <header class="hero" aria-label="Section contact">
    <div class="hero__wrap">
      <h1 class="hero__title"><span class="reveal">CONTACT</span></h1>
      <span class="hero__shine" aria-hidden="true"></span>
    </div>
  </header>

  <!-- SECTION : 2 colonnes (texte gauche / image droite) -->
  <section class="two-col">
    <div class="two-col__wrap">
      <!-- Gauche : Titre + Texte -->
      <div>
        <h2 class="two-col__title">Par E-mail</h2>
        <p class="two-col__text">
          Envoyez-nous un e-mail ici : <strong>contact@itrora.com</strong>
        </p>
      </div>

      <!-- Droite : Image depuis /public -->
      <div class="two-col__media">
        <img src="/contact.png" alt="Nous contacter — Itrora Parfums" loading="lazy" decoding="async" />
      </div>
    </div>
  </section>
