---
const SITE_NAME = "Itrora Parfums";

const P = {
  slug: "musc-fruite",
  name: "Musc Fruité",
  subtitle: "EXTRAIT DE PARFUMS",
  price: "40,00 €",
  image: "/musc-fruite1.png",
  short:
    "Musc Fruité, la fragrance qui éveille l’imaginaire. Séducteur et enivrant, il vous entraîne vers vos rêves les plus fous. Conçu pour inspirer les âmes poétiques, ce parfum est une invitation à la fascination et à l’évasion.",
  notes: {
    tete: "Orange et Citron de Sicile, Bergamote de Calabria",
    coeur: "Fruits",
    fond: "Musc blanc, Vanille de Madagascar, Ambre"
  },
  bullets: ["Made in France", "Livré en quelques jours"],
  // Lien Stripe (Musc Fruité)
  stripe: "https://buy.stripe.com/3cIbJ1gRna6GeIMc1AbQY03"
};

const WHATSAPP_PHONE = "33650959363";

// Pour le pied de page (même logique que les autres pages)
const WHATSAPP_MSG = "Bonjour, je souhaite en savoir plus sur la nouvelle collection Itrora Parfums.";
const WHATSAPP_URL = `https://wa.me/${WHATSAPP_PHONE}?text=${encodeURIComponent(WHATSAPP_MSG)}`;

// Images de la galerie produit
const IMAGES = [
  "/musc-fruite1.png",
  "/musc-fruite2.jpg",
  "/musc-fruite3.jpg",
  "/musc-fruite4.jpg",
];

// Produits similaires (avec liens Stripe)
const RELATED = [
  {
    slug: "/produits/dragon-rose",
    name: "Dragon Rose",
    tags: "FLORALE, FRUITÉE, ROSE",
    price: "35,00 €",
    image: "/dragon-rose2.png",
    stripe: "https://buy.stripe.com/eVqeVd58F7Yy9os3v4bQY02"
  },
  {
    slug: "/produits/coco-des-iles",
    name: "Coco des Îles",
    tags: "EXOTIQUE, VANILLÉ",
    price: "40,00 €",
    image: "/coco-des-iles1.png",
    stripe: "https://buy.stripe.com/9B64gz7gN7YydEI6HgbQY01"
  },
];
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{P.name} — {SITE_NAME}</title>

  <!-- Polices -->
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

  <style>
    :root{ --bg:#F7F5F3; --ink:#223029; --muted:#64706A; --accent:#0E4639; --g: clamp(16px,3vw,28px); --orange:#ff6a3d;}
    *{box-sizing:border-box}
    body{margin:0;background:var(--bg);color:var(--ink);font-family:Inter,system-ui}
    a{color:inherit}
    .wrap{max-width:1200px;margin:0 auto;padding:24px}

    .grid{display:grid;grid-template-columns:1.1fr 1fr;gap:40px;align-items:start}
    @media(max-width:1000px){.grid{grid-template-columns:1fr}}

    /* ===== Galerie produit ===== */
    .media{position:sticky;top:16px}
    @media(max-width:1000px){.media{position:static}}

    .gallery{display:grid;gap:10px}
    .gal-main{position:relative}
    .gal-main img{display:block;width:100%;height:auto;border-radius:18px;box-shadow:0 16px 40px rgba(0,0,0,.08);background:#fff}

    .g-nav{
      position:absolute;top:50%;transform:translateY(-50%);
      width:40px;height:40px;border-radius:50%;
      display:grid;place-items:center;border:1px solid rgba(0,0,0,.08);
      background:rgba(255,255,255,.92);color:#223029;cursor:pointer;
      box-shadow:0 10px 24px rgba(0,0,0,.12);
    }
    .g-nav.prev{left:10px}
    .g-nav.next{right:10px}
    .g-nav:hover{background:#fff}
    .g-nav:active{transform:translateY(-50%) scale(.98)}
    .g-nav svg{display:block}

    .thumbs{display:grid;grid-template-columns:repeat(5,1fr);gap:10px}
    .th{
      appearance:none;border:0;padding:0;background:#fff;border-radius:12px;
      overflow:hidden;aspect-ratio:1/1;cursor:pointer;
      box-shadow:inset 0 0 0 1px rgba(0,0,0,.06), 0 6px 12px rgba(0,0,0,.06);
      transition:transform .12s ease, box-shadow .12s ease;
    }
    .th:hover{transform:translateY(-2px)}
    .th img{width:100%;height:100%;object-fit:cover;display:block}
    .th.is-active{box-shadow:inset 0 0 0 2px var(--orange), 0 6px 12px rgba(0,0,0,.06)}
    @media(max-width:560px){.thumbs{grid-template-columns:repeat(4,1fr)}}

    /* Texte produit */
    h1{font-family:"Playfair Display",serif;font-weight:700;font-size:clamp(34px,4vw,60px);margin:.25rem 0 .25rem}
    .subtitle{letter-spacing:.18em;text-transform:uppercase;color:var(--muted);font-weight:700;margin:0 0 .75rem}
    .lead{line-height:1.7;color:#2e3b34;margin:.6rem 0 1.2rem}
    .price{font-size:clamp(20px,2.4vw,28px);font-weight:800;margin:.6rem 0 1.2rem}

    .notes{margin:1.2rem 0;border-radius:16px;overflow:hidden;border:1px solid rgba(0,0,0,.06)}
    .notes header{display:grid;grid-template-columns:1fr 1fr 1fr;background:var(--accent);color:#fff;font-weight:700}
    .notes header div{padding:.9rem 1rem}
    .notes .row{display:grid;grid-template-columns:1fr 1fr 1fr;background:#fff}
    .notes .row div{padding:.9rem 1rem;border-top:1px solid rgba(0,0,0,.06)}

    .badge{display:inline-grid;grid-auto-flow:column;gap:.5rem;align-items:center;background:#fbf7f0;border:1px solid rgba(0,0,0,.06);border-radius:12px;padding:.6rem .8rem;margin:1rem 0 .6rem}
    .ticklist{list-style:none;margin:1rem 0 0;padding:0}
    .ticklist li{display:grid;grid-template-columns:20px 1fr;gap:.6rem;padding:.35rem 0;align-items:center}
    .tick{width:18px;height:18px;border-radius:50%;background:var(--orange);display:inline-block}

    .cta{display:flex;gap:.75rem;align-items:center;margin:1.2rem 0 1.6rem}
    .btn{appearance:none;border:0;border-radius:14px;padding:1rem 1.4rem;background:var(--orange);color:#fff;font-weight:800;cursor:pointer;box-shadow:0 10px 24px rgba(255,106,61,.25)}
    .btn.secondary{background:#223029}

    /* ===== Features ===== */
    .features{display:grid;grid-template-columns:1fr 1fr;gap:24px;margin:40px 0;align-items:stretch}
    @media(max-width:1000px){.features{grid-template-columns:1fr}}
    .f-card{background:#F6EFE7;border-radius:18px;padding:28px 22px;text-align:center;box-shadow:inset 0 0 0 1px rgba(0,0,0,.04);display:grid;grid-template-rows:auto 170px 1fr;gap:14px}
    .f-title{
      font-family:"Montserrat",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif;
      font-weight:800; line-height:1.08; text-align:center;
      font-size:clamp(18px,2.6vw,28px);
      --title-lines:3; min-height:calc(1em * var(--title-lines) * 1.08);
      margin:.2rem 0 12px;
    }
    .f-img{width:100%;height:100%;object-fit:contain;margin:0 auto}
    .f-text{margin:0;color:#2e3b34;line-height:1.7}
    .f-text strong{font-weight:800}

    /* Réseaux (bloc dans la colonne de droite) */
    .socials{display:flex;gap:8px;justify-content:flex-start;align-items:center;margin:8px 0 0}
    .so{width:32px;height:32px;display:grid;place-items:center;border-radius:50%;background:#f6f5f4;color:#223029;box-shadow:inset 0 0 0 1px rgba(0,0,0,.08);transition:transform .15s ease,filter .15s ease;text-decoration:none}
    .so:hover{transform:translateY(-2px);filter:brightness(0.97)}
    .so svg{width:16px;height:16px}

    /* ===== Tabs ===== */
    .tabs{margin:64px 0 8px}
    .tabs-bar{position:relative;display:flex;justify-content:center;margin-bottom:18px}
    .tabs-bar::before{content:"";position:absolute;left:0;right:0;top:50%;height:1px;background:rgba(0,0,0,.18)}
    .tabs-pills{position:relative;z-index:1;display:inline-flex;align-items:stretch;background:#fff;border:1px solid rgba(0,0,0,.22);border-radius:4px;overflow:hidden}
    .tab{appearance:none;border:0;background:#fff;padding:.7rem 1.1rem;font-weight:800;letter-spacing:.02em;color:#2b3d35;cursor:pointer}
    .tab + .tab{border-left:1px solid rgba(0,0,0,.12)}
    .tab.is-active{background:#EEF3F1}
    .tab:focus-visible{outline:2px solid rgba(14,70,57,.3);outline-offset:2px}
    .tab-panels{max-width:1000px;margin:0 auto;color:#2e3b34}
    .panel{display:none;line-height:1.8}
    .panel.is-active{display:block}

    /* ===== Produits similaires (Montserrat) ===== */
    .related, .related *{font-family:"Montserrat",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif !important;}
    .related{padding:24px 0 56px;margin-top:48px}
    .related h2{font-family:"Playfair Display",serif;font-weight:700;text-align:center;font-size:clamp(28px,4.6vw,56px);margin:0 0 22px}
    .rel-grid{display:grid;grid-template-columns:1fr 1fr;gap:28px;max-width:1100px;margin:0 auto}
    @media(max-width:1000px){.rel-grid{grid-template-columns:1fr}}
    .rel-card{background:#F6EFE7;border-radius:18px;box-shadow:inset 0 0 0 1px rgba(0,0,0,.06);padding:26px 22px;display:grid;grid-template-rows:auto 1fr auto auto;align-items:start}
    .rel-media{display:grid;place-items:center;background:#fff;border-radius:12px;min-height:320px;margin-bottom:16px;box-shadow:0 16px 40px rgba(0,0,0,.06),inset 0 0 0 1px rgba(0,0,0,.04)}
    .rel-media img{width:min(82%,360px);height:auto;display:block;object-fit:contain}
    .rel-tags{letter-spacing:.12em;text-transform:uppercase;color:#2b3d35;opacity:.75;font-weight:800;margin:.2rem 0 .35rem;text-align:center}
    .rel-title{text-align:center;font-weight:800;margin:.2rem 0 .2rem}
    .rel-price{text-align:center;color:var(--orange);font-weight:800;margin:.2rem 0 1rem}
    .rel-btn{appearance:none;border:0;border-radius:999px;padding:1rem 1.4rem;background:var(--orange);color:#fff;font-weight:800;display:block;width:min(260px,80%);margin:0 auto 4px;cursor:pointer;box-shadow:0 10px 24px rgba(255,106,61,.25);text-align:center;text-decoration:none}
    .rel-btn:hover{filter:brightness(1.05)}

    /* ===== Atouts ===== */
    .perks{padding:40px 0 56px;margin-top:16px;border-top:1px solid rgba(0,0,0,.08)}
    .perks, .perks *{font-family:"Montserrat",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif !important}
    .perks-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:24px;max-width:1200px;margin:0 auto}
    @media(max-width:1000px){.perks-grid{grid-template-columns:1fr 1fr}}
    @media(max-width:560px){.perks-grid{grid-template-columns:1fr}}
    .perk{display:flex;flex-direction:column;align-items:center;gap:8px;text-align:center;padding:12px 14px}
    .perk .ico{color:#ff6a3d;margin:0 auto 4px;line-height:0}
    .perk .ico svg{width:36px;height:36px}
    .perk h3{font-weight:700;font-size:clamp(18px,2vw,22px);letter-spacing:.01em;margin:4px 0 2px;line-height:1.2}
    .perk p{margin:0;color:#2e3b34;line-height:1.6;font-size:clamp(.92rem,1.1vw,1rem)}

    /* ===== Pied de page ===== */
    .site-footer{background:#fff;color:var(--ink);padding:3rem 24px 2.5rem;border-top:1px solid rgba(0,0,0,.06);margin-top:8px}
    .site-footer, .site-footer *{font-family:"Montserrat",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif !important}
    .footer-grid{max-width:1200px;margin:0 auto;display:grid;grid-template-columns:1.2fr 1fr 1fr 1fr;gap:2rem 3rem;align-items:start}
    @media (max-width:1000px){.footer-grid{grid-template-columns:1fr 1fr 1fr}}
    @media (max-width:800px){.footer-grid{grid-template-columns:1fr 1fr}}
    @media (max-width:560px){.footer-grid{grid-template-columns:1fr}}
    .footer-brand .footer-logo{display:block;height:144px;width:auto}
    @media (max-width:1000px){ .footer-brand .footer-logo{height:112px} }
    @media (max-width:560px){ .footer-brand .footer-logo{height:80px} }
    .footer-brand .sub{opacity:.85;margin:.75rem 0 1rem}

    .site-footer .socials{display:flex;gap:.8rem;margin-top:1rem}
    .site-footer .social{width:48px;height:48px;display:grid;place-items:center;border-radius:50%;background:#f6f5f4;color:#2A2927;box-shadow:inset 0 0 0 1px rgba(0,0,0,.08);transition:filter .15s ease,transform .15s ease}
    .site-footer .social:hover{filter:brightness(0.97);transform:translateY(-1px)}

    .footer-title{letter-spacing:.18em;text-transform:uppercase;color:var(--muted);font-weight:800;font-size:.9rem;margin:0 0 .9rem}
    .footer-list{margin:0;padding:0;list-style:none}
    .footer-list li{margin:.45rem 0}
    .footer-list a{color:var(--ink);text-decoration:none;opacity:.9}
    .footer-list a:hover{ text-decoration:underline}
    .contact p{margin:.35rem 0}
    .contact .link{color:var(--ink);text-decoration:none}
    .contact .link:hover{ text-decoration:underline}

    .footer-bottom{max-width:1200px;margin:2rem auto 0;padding-top:1rem;display:flex;align-items:center;justify-content:flex-start;gap:1rem;border-top:1px solid rgba(0,0,0,.08);color:var(--muted)}
    @media (max-width:560px){.footer-bottom{flex-direction:column;align-items:flex-start}}

    /* ===== Mini barre collante (achat rapide) ===== */
    .mini-bar, .mini-bar *{ font-family:"Montserrat",system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif; }
    .mini-bar{ position:fixed; left:0; right:0; bottom:0; z-index:999; background:#fff; border-top:1px solid rgba(0,0,0,.08); box-shadow:0 -10px 30px rgba(0,0,0,.08); transform:translateY(110%); opacity:0; pointer-events:none; transition:transform .25s ease, opacity .25s ease; }
    .mini-bar.is-visible{ transform:translateY(0); opacity:1; pointer-events:auto; }
    .mini-wrap{ max-width:1200px; margin:0 auto; padding:10px 14px; display:flex; align-items:center; gap:14px; }
    .mini-left{ display:flex; align-items:center; gap:10px; min-width:0; }
    .mini-thumb{ width:36px; height:36px; border-radius:8px; object-fit:cover; box-shadow:0 2px 8px rgba(0,0,0,.12); }
    .mini-title{ font-weight:700; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; }
    .mini-price{ font-weight:800; margin-left:6px; color:#223029; }
    .mini-qty{ margin-left:auto; display:flex; align-items:center; gap:6px; }
    .mini-step{ width:34px; height:34px; border-radius:8px; border:1px solid rgba(0,0,0,.12); background:#fff; cursor:pointer; font-size:18px; line-height:1; }
    .mini-input{ width:42px; height:34px; text-align:center; border:1px solid rgba(0,0,0,.12); border-radius:8px; }
    .mini-btn{ appearance:none; border:0; border-radius:999px; padding:.8rem 1.2rem; background:#ff6a3d; color:#fff; font-weight:800; text-decoration:none; box-shadow:0 10px 24px rgba(255,106,61,.25); white-space:nowrap; }
    .mini-btn:hover{ filter:brightness(1.05); }

    @media (max-width:700px){ .mini-title{ display:none; } }
    :root{ --miniH: 72px; }
    @media (max-width: 700px){
      body.has-mini { padding-bottom: calc(var(--miniH) + max(8px, env(safe-area-inset-bottom))); }
      .mini-bar{ padding-bottom: max(8px, env(safe-area-inset-bottom)); }
      .cta{ flex-wrap: wrap; gap: 10px; }
      .cta .btn{ width: 100%; justify-content: center; }
      .notes header, .notes .row{ grid-template-columns: 1fr; }
      .notes header div, .notes .row div{ padding: .8rem 1rem; }
      .thumbs{ gap: 8px; }
      .g-nav{ width:34px; height:34px; }
      .f-card{ grid-template-rows: auto 140px 1fr; padding:22px 18px; }
      .f-img{ max-height:140px; }
      .related, .perks{ padding-bottom: 72px; }
    }
    @media (max-width: 380px){
      h1{ font-size: clamp(28px, 8vw, 34px); }
    }
  </style>
</head>

<!-- Mini barre d'achat (après les onglets) -->
<div class="mini-bar" data-mini-bar aria-hidden="true">
  <div class="mini-wrap">
    <div class="mini-left">
      <img class="mini-thumb" src={P.image} alt={P.name} />
      <div class="mini-title">{P.name}</div>
      <div class="mini-price">{P.price}</div>
    </div>

    <div class="mini-qty">
      <button class="mini-step" type="button" data-delta="-1" aria-label="Diminuer">−</button>
      <input class="mini-input" type="text" value="1" inputmode="numeric" pattern="[0-9]*" data-qty />
      <button class="mini-step" type="button" data-delta="1" aria-label="Augmenter">+</button>
    </div>

    <!-- data-stripe pour permettre au JS d'ajouter ?quantity= -->
    <a class="mini-btn" href={P.stripe} data-stripe={P.stripe} target="_blank" rel="noopener" data-mini-buy>JE VEUX ACHETER</a>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  /* ====== GALERIE ====== */
  const gal = document.querySelector("[data-gallery]");
  if (gal) {
    const mainImg = gal.querySelector("[data-main]");
    const thumbs = Array.from(gal.querySelectorAll("[data-th]"));
    const prev = gal.querySelector("[data-prev]");
    const next = gal.querySelector("[data-next]");

    let index = thumbs.findIndex(b => b.classList.contains("is-active"));
    if (index < 0) index = 0;

    const setActive = (i) => {
      index = (i + thumbs.length) % thumbs.length;
      thumbs.forEach((b, k) => b.classList.toggle("is-active", k === index));
      const img = thumbs[index].querySelector("img");
      if (img && mainImg) mainImg.src = img.src;
    };

    thumbs.forEach((btn, i) => btn.addEventListener("click", () => setActive(i)));
    if (prev) prev.addEventListener("click", () => setActive(index - 1));
    if (next) next.addEventListener("click", () => setActive(index + 1));
  }

  /* ====== ONGLETS ====== */
  const tabsRoot = document.querySelector("[data-tabs]");
  if (tabsRoot) {
    const tabs = Array.from(tabsRoot.querySelectorAll("[role='tab']"));
    const panels = Array.from(document.querySelectorAll("[data-panel]"));
    const activate = (key) => {
      tabs.forEach(t => {
        const on = t.dataset.tab === key;
        t.classList.toggle("is-active", on);
        t.setAttribute("aria-selected", on ? "true" : "false");
      });
      panels.forEach(p => p.classList.toggle("is-active", p.dataset.panel === key));
    };
    tabs.forEach(t => t.addEventListener("click", () => activate(t.dataset.tab)));
  }

  /* ====== MINI-BAR (achat rapide) ====== */
  const mini = document.querySelector("[data-mini-bar]");
  if (mini) {
    const showMini = () => { mini.classList.add("is-visible"); document.body.classList.add("has-mini"); };
    const hideMini = () => { mini.classList.remove("is-visible"); document.body.classList.remove("has-mini"); };

    // Affiche la mini-bar quand la zone des onglets est dépassée
    const tabsSection = document.querySelector(".tabs");
    if (tabsSection && "IntersectionObserver" in window) {
      const io = new IntersectionObserver(([e]) => {
        e.isIntersecting ? hideMini() : showMini();
      }, { rootMargin: "0px", threshold: 0 });
      io.observe(tabsSection);
    } else {
      window.addEventListener("scroll", () => {
        const y = tabsSection ? tabsSection.getBoundingClientRect().top : 9999;
        (y < 0) ? showMini() : hideMini();
      });
    }

    // +/- quantité + mise à jour du lien Stripe (ajout ?quantity=)
    const qtyInput = mini.querySelector("[data-qty]");
    const miniBuy = mini.querySelector("[data-mini-buy]");
    const baseStripe = (miniBuy && (miniBuy.dataset.stripe || miniBuy.getAttribute("href"))) || "";
    const stripeWithQty = (q) => {
      if (!baseStripe) return "#";
      const sep = baseStripe.includes("?") ? "&" : "?";
      return q > 1 ? `${baseStripe}${sep}quantity=${q}` : baseStripe;
    };
    const updateMiniHref = () => {
      const q = Math.max(1, parseInt(qtyInput.value || "1", 10) || 1);
      if (miniBuy) miniBuy.setAttribute("href", stripeWithQty(q));
    };
    updateMiniHref();

    mini.querySelectorAll(".mini-step").forEach(btn => {
      btn.addEventListener("click", () => {
        const d = parseInt(btn.dataset.delta || "0", 10);
        const v = Math.max(1, (parseInt(qtyInput.value || "1", 10) || 1) + d);
        qtyInput.value = v;
        updateMiniHref();
      });
    });
    qtyInput.addEventListener("input", updateMiniHref);
  }

  /* ====== Bouton “Poser une question” (WhatsApp) ====== */
  const waInfoUrl = (name) =>
    `https://wa.me/${"33650959363"}?text=${encodeURIComponent(
      `Bonjour, je veux des infos sur ${name}.`
    )}`;

  document.querySelectorAll(".btn.secondary").forEach(a => {
    a.setAttribute("href", waInfoUrl(document.querySelector("h1")?.textContent.trim() || "Produit"));
    a.setAttribute("target", "_blank");
    a.setAttribute("rel", "noopener");
  });

  /* ====== Produits similaires => Stripe (filet de sécurité) ====== */
  document.querySelectorAll(".rel-card").forEach((card, idx) => {
    const btn = card.querySelector(".rel-btn");
    if (btn && !btn.getAttribute("href")) {
      const data = RELATED[idx];
      if (data?.stripe) btn.setAttribute("href", data.stripe);
    }
  });

  /* ====== Lien WhatsApp du footer (si besoin) ====== */
  const footerIG = document.querySelector('footer .social[aria-label="Instagram"]');
  if (footerIG) footerIG.setAttribute("href", "{WHATSAPP_URL}");
});
</script>

